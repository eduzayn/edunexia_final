{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "framework": null,
  "builds": [
    { "src": "package.json", "use": "@vercel/node" },
    { "src": "vercel-build.sh", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "server/api/**/*.js", "use": "@vercel/node" },
    { "src": "server/auth/token.js", "use": "@vercel/node" },
    { "src": "server/module-alias.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/login", "destination": "/server/api/login.js" },
    { "source": "/api-json/login", "destination": "/server/api/login.js" },
    { "source": "/api/jwt", "destination": "/server/api/index.js" },
    { "source": "/api/jwt/:path*", "destination": "/server/api/index.js" },
    { "source": "/api/(.*)", "destination": "/server/api/index.js" },
    { "source": "/api-json/(.*)", "destination": "/server/api/index.js" },
    { "source": "/assets/(.*)", "destination": "/dist/assets/$1" },
    { "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))", "destination": "/dist/$1" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.vercel.com *.stripe.com *.vercel-live.com; style-src 'self' 'unsafe-inline' *.googleapis.com; img-src 'self' data: blob: *.vercel.com; font-src 'self' *.googleapis.com *.gstatic.com; connect-src 'self' *.vercel.com *.vercel-live.com *.stripe.com; frame-src 'self' *.stripe.com *.vercel-live.com" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*\\.(ts|tsx|js.map))",
      "headers": [
        { "key": "Content-Type", "value": "text/plain" },
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/login",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "OPTIONS,POST" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    },
    {
      "source": "/api-json/login",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "OPTIONS,POST" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
} 