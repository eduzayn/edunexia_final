# Ignorar arquivos e pastas sensíveis para não serem enviados ao Vercel
node_modules/
.git/
.env
.env.*
.env.local
.env.development
.env.test

# Ignorar arquivos de código-fonte que devem ser compilados
# e não servidos diretamente
/shared/**/*.ts
/server/**/*.ts
!/server/api/index.js
!/server/api/login.js
!/server/auth/token.js
!/server/module-alias.js

# Ignorar arquivos de compilação TypeScript
*.ts
*.tsx
!vercel-build.sh
!vercel.json
!.vercelignore

# Ignorar arquivos de mapeamento de origem
*.js.map
*.css.map

# Ignorar arquivos de configuração de desenvolvimento
tsconfig.json
tailwind.config.ts
postcss.config.js
# IMPORTANTE: Não ignorar o vite.config.ts, necessário para o build
# vite.config.ts
drizzle.config.ts

# Arquivos temporários e logs
.log
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.DS_Store
Thumbs.db